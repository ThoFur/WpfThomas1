<Window x:Class="WpfThomas1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfThomas1"
        mc:Ignorable="d"
        Title="Jurassic Park Security" Height="800" Width="800">
    <Grid x:Name="mainGrid">
        <Button x:Name="myButton" Content="Click Me" Click="MyButton_Click" Width="100" Height="100" Panel.ZIndex="1"/>
        <Image x:Name="myImage" Source="/ahahNedry.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="450" Visibility="Collapsed" Panel.ZIndex="0"/>
        <TextBox x:Name="myTextBox" Width="200" Height="30" Visibility="Hidden" TextChanged="MyTextBox_TextChanged"/>
        <TextBlock x:Name="safeTextBlock" Text="SAFE" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
    </Grid>

</Window>
